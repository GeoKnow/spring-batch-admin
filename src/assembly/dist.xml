<assembly>
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>
					org.springframework.batch:spring-batch-admin-parent
				</include>
				<include>
					org.springframework.batch:spring-batch-admin-resources
				</include>
				<include>
					org.springframework.batch:spring-batch-admin-manager
				</include>
				<include>
					org.springframework.batch:spring-batch-integration
				</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>target</directory>
						<outputDirectory>dist</outputDirectory>
						<includes>
							<include>*.jar</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>	
		<moduleSet>
			<includes>
				<include>
					org.springframework.batch:spring-batch-admin-sample
				</include>
			</includes>
			<sources>
				<outputDirectoryMapping>
					sample/${module.artifactId}
				</outputDirectoryMapping>
				<fileSets>
					<fileSet>
						<excludes>
							<exclude>bin/**</exclude>
							<exclude>target/**</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>
					org.springframework.batch:spring-batch-admin-parent
				</include>
			</includes>
			<sources>
				<outputDirectoryMapping>
					sample/spring-batch-admin-parent
				</outputDirectoryMapping>
				<fileSets>
					<fileSet>
						<excludes>
							<exclude>src/**</exclude>
							<exclude>bin/**</exclude>
							<exclude>target/**</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>src/assembly</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>license.txt</include>
				<include>notice.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<!-- adds reference manual (html and pdf) to the distribution archive under the
				 'docs/reference' directory
				 see pom.xml 'maven-javadoc-plugin' declaration -->
			<directory>target/generated-site</directory>
			<outputDirectory>docs/reference</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
